---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import React from "./icons/React.astro";
import Node from "./icons/Node.astro";
import HTML from "./icons/HTML.astro";
import JS from "./icons/JS.astro";
import Stro from "./icons/Stro.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#2D3748] text-white",
    icon: Tailwind,
  },
  REACT: {
    name: "React",
    class: "bg-[#2D3748] text-white",
    icon: React,
  },
  NODE: {
    name: "Node.js",
    class: "bg-[#1E4B05] text-white",
    icon: Node,
  },
  HTML: {
    name: "HTML",
    class: "bg-[#D35400] text-white",
    icon: HTML,
  },
  JS: {
    name: "JavaScript",
    class: "bg-[#1A1A1D] text-white",
    icon: JS,
  },
  Stro: {
    name: "Astro",
    class: "bg-[#1A1A1D] text-white",
    icon: Stro,
  },
};

const PROJECTS = [
  {
    title: "Arxatec - Consultas Legales online",
    description:
      "Plataforma innovadora para realizar consultas legales en línea. Permite a los usuarios obtener respuestas rápidas y eficientes de abogados calificados.",
    link: "https://arxatec.net/web/index.php",
    github: "https://github.com/pheralb/svgl",
    image: "/projects/arx.webp",
    tags: [TAGS.Stro,TAGS.TAILWIND,  TAGS.HTML],
    reverse: false,
  },
  {
    title: "Mi Portafolio Personal",
    description:
      // "Portafolio personal que muestra mis proyectos y habilidades. Incluye un blog con contenido sobre programación y desarrollo personal. Desarrollado con Astro y Tailwind CSS.",
      "Plataforma innovadora para realizar consultas legales en línea. Permite a los usuarios obtener respuestas rápidas y eficientes de abogados calificados.",
    link: "https://adventjs.dev",
    github: "https://github.com/pheralb/svgl",
    image: "/projects/portfolio1.webp",
    tags: [TAGS.Stro, TAGS.TAILWIND, TAGS.HTML],
    reverse: true,
  },
];
---

<div class="flex flex-col gap-y-16 items-center mt-16">
  {PROJECTS.map(({ image, title, description, tags, link, github, reverse }) => (
    <article
      class={`flex flex-col space-x-0 space-y-8 group md:flex-row md:space-y-0 ${reverse ? 'md:flex-row-reverse md:space-x-0 md:gap-x-5 ' : 'md:space-x-8'} w-full max-w-4xl`}
    >
      <div class="w-full md:max-w-[900px]"> 
        <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
          <img
            alt="Imagen del proyecto"
            class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" 
            src={image}
          />
        </div>
      </div>

      <div class="w-full md:max-w-lg ">
        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100 " >{title}</h3>
        <div class="flex flex-wrap mt-2">
          <ul class="flex flex-wrap mb-2 gap-x-2 gap-y-2">
            {tags.map((tag) => (
              <li >
                <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                  <tag.icon class="size-4" style="border-radius:3px" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
          <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
          <footer class="flex items-end justify-start mt-4 gap-x-4">
            {github && (
              <LinkButton href={github}>
                <GitHub class="size-6" />
                Code
              </LinkButton>
            )}
            {link && (
              <LinkButton href={link}>
                <Link class="size-4" />
                Visitar
              </LinkButton>
            )}
          </footer>
        </div>
      </div>
    </article>
  ))}
</div>
