---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Badge from '../components/Badge.astro';

import LinkedInIcon from '../components/icons/LinkedIn.astro';
import GitHubIcon from '../components/icons/GitHub.astro';
import GDGIcon from '../components/icons/GDG.astro';
import YoutubeIcon from '../components/icons/Youtube.astro';

import SocialPill from '../components/SocialPill.astro';

---

<Layout title="Welcome to Astro.">
	<main>

		<section class="w-full mx-auto lg:w-[740px] py-44">

			<img 
				class="rounded-full w-12 h-12 mb-4" 
				src="https://media.licdn.com/dms/image/D4D03AQHH45fimBPlUw/profile-displayphoto-shrink_200_200/0/1708795078992?e=2147483647&v=beta&t=e_eoEsVvAhPAQNPQ8FEU6Kk2C-as5aSJS1q5cvV-GFo" 
				alt="alex-photo"
			/>



			<h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-4">
				Hola, soy Yonatan <a 
				href="https://pe.linkedin.com/in/ordo%C3%B1ez-diego" 
				rel="noopener" 
				target="_blank"
				class="flex justify-center items-center"
				>
					<Badge>Disponible para trabajar</Badge>
				</a> 
				
			</h1>
			<h2 class="text-2xl "><span class="text-yellow-500/90 opacity-80"> Lorem ipsum, </span>dolor sit amet consectetur <span class="text-red-500/90"> adipisicing elit</span>. 
				Rem nam soluta non <span class="text-blue-500/90">perferendis blanditiis</span> quae at, voluptatum officiis totam beatae, quas ex animi. 
				Doloribus natus <span class="text-green-500/90">repudiandae quas sapiente</span> <span class="opacity-50"> quibusdam sequi.</span></h2>

			<nav class="flex gap-x-2 mt-8">

				<SocialPill>
					<LinkedInIcon class="w-6 h-6" />LinkedIn 
				</SocialPill>

				<SocialPill>
					<GitHubIcon class="w-6 h-6" />GitHub
				</SocialPill>

				<SocialPill>
					<GDGIcon class="w-6 h-6" />GDG
				</SocialPill>

				<SocialPill>
					<YoutubeIcon class="w-6 h-6" />Youtube
				</SocialPill>

			</nav>
						
				
		</section>
	</main>
</Layout>


 